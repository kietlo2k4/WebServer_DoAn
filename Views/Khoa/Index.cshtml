@model IEnumerable<WebServer_DoAn.ViewModel.KhoaViewModel>

@{
    ViewData["Title"] = "Quản lý Khoa";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-success mb-3">➕ Thêm Khoa</a>

<table class="table table-bordered">
    <thead class="table-primary">
        <tr>
            <th>Mã Khoa</th>
            <th>Tên Khoa</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var k in Model)
        {
            <tr>
                <td>@k.MaKhoa</td>
                <td>@k.TenKhoa</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@k.MaKhoa" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Details" asp-route-id="@k.MaKhoa" class="btn btn-info btn-sm">Xem</a>
                    <a asp-action="Delete" asp-route-id="@k.MaKhoa" class="btn btn-danger btn-sm">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
