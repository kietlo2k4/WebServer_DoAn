@model WebServer_DoAn.ViewModel.KhoaViewModel

@{
    ViewData["Title"] = "✏️ Sửa Khoa";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post" class="row g-3">

    <div class="col-md-6">
        <label asp-for="MaKhoa" class="form-label">Mã Khoa</label>
        <input asp-for="MaKhoa" class="form-control" readonly />
        <span asp-validation-for="MaKhoa" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="TenKhoa" class="form-label">Tên Khoa</label>
        <input asp-for="TenKhoa" class="form-control" />
        <span asp-validation-for="TenKhoa" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">💾 Cập nhật</button>
        <a asp-action="Index" class="btn btn-secondary">⬅️ Quay lại</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
