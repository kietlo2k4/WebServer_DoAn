@model WebServer_DoAn.ViewModel.LopSinhVienViewModel
@{
    ViewData["Title"] = "Xóa Lớp";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>❌ Xóa lớp</h2>

<p>Bạn có chắc muốn xóa lớp này?</p>

<dl class="row">
    <dt class="col-sm-2">Mã lớp</dt>
    <dd class="col-sm-10">@Model.MaLop</dd>

    <dt class="col-sm-2">Tên lớp</dt>
    <dd class="col-sm-10">@Model.TenLop</dd>

    <dt class="col-sm-2">Khóa học</dt>
    <dd class="col-sm-10">@Model.KhoaHoc</dd>

    <dt class="col-sm-2">Ngành</dt>
    <dd class="col-sm-10">@Model.MaNganh</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="MaLop" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
