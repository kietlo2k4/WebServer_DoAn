@model WebServer_DoAn.ViewModel.SinhVienViewModel

@{
    ViewData["Title"] = "Chỉnh sửa Sinh Viên";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>✍️ @ViewData["Title"]</h2>

<form asp-action="Edit" method="post" class="row g-3">

    <input type="hidden" asp-for="MaSV" />

    <div class="col-md-6">
        <label class="form-label">Mã SV</label>
        <input asp-for="MaSV" class="form-control" readonly />
    </div>

    <div class="col-md-6">
        <label class="form-label">Họ tên</label>
        <input asp-for="HoTen" class="form-control" />
        <span asp-validation-for="HoTen" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label class="form-label">Ngày sinh</label>
        <input asp-for="NgaySinh" type="date" class="form-control" />
        <span asp-validation-for="NgaySinh" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label class="form-label">Giới tính</label>
        <select asp-for="GioiTinh" class="form-select">
            <option value="Nam" selected="@("Nam" == Model.GioiTinh)">Nam</option>
            <option value="Nữ" selected="@("Nữ" == Model.GioiTinh)">Nữ</option>
        </select>
        <span asp-validation-for="GioiTinh" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label class="form-label">Quê quán</label>
        <input asp-for="QueQuan" class="form-control" />
        <span asp-validation-for="QueQuan" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label class="form-label">Email</label>
        <input asp-for="Email" type="email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label class="form-label">SĐT</label>
        <input asp-for="SDT" class="form-control" />
        <span asp-validation-for="SDT" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label class="form-label">Tình trạng</label>
        <input asp-for="TinhTrang" class="form-control" />
        <span asp-validation-for="TinhTrang" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label class="form-label">Lớp</label>
        <select asp-for="MaLop" class="form-select" asp-items="ViewBag.MaLop"></select>
        <span asp-validation-for="MaLop" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label class="form-label">Tài khoản</label>
        <select asp-for="TaiKhoanDangNhap" class="form-select" asp-items="ViewBag.TaiKhoanDangNhap"></select>
        <span asp-validation-for="TaiKhoanDangNhap" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Cập nhật</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>
