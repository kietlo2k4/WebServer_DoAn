@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng nhập hệ thống</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-image: url('/images/bg_login.jpg'); /* Ảnh nền tại wwwroot/images/bg_login.jpg */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 100vh;
            font-family: Arial, sans-serif;
        }

        .login-box {
            background: rgba(255, 255, 255, 0.95);
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 0 15px rgba(0,0,0,0.2);
            width: 100%;
            max-width: 400px;
            margin: auto;
            margin-top: 8%;
        }

        .login-logo {
            display: block;
            margin: 0 auto 20px;
            width: 80px;
        }

        .form-control {
            margin-bottom: 15px;
        }

        .btn-primary {
            width: 100%;
        }

        .error-message {
            color: red;
            font-weight: bold;
            text-align: center;
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="login-box">
        <img src="~/images/uneti.jpg" alt="Logo" class="login-logo" /> <!-- Logo tại wwwroot/images/uneti.jpg -->

        <h4 class="text-center mb-4">Hệ thống đăng ký tín chỉ</h4>

        @if (ViewBag.Error != null)
        {
            <div class="error-message">@ViewBag.Error</div>
        }

        <form method="post">
            <label class="form-label">Tên đăng nhập</label>
            <input type="text" name="username" class="form-control" placeholder="Tài khoản đăng nhập" required />
            <label class="form-label">Mật khẩu</label>
            <input type="password" name="password" class="form-control" placeholder="Mật khẩu" required />

            <div class="mb-3 text-start">
                <label class="form-label">Vai trò</label>
                <select name="role" class="form-select" required>
                    <option value="">-- Chọn vai trò --</option>
                    <option value="SinhVien">Sinh Viên</option>
                    <option value="Admin">Admin</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Đăng nhập</button>
        </form>
    </div>
</body>
</html>
