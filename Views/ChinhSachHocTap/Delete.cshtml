@model WebServer_DoAn.ViewModel.ChinhSachHocTapViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Xóa chính sách học tập";
}

<h2>@ViewData["Title"]</h2>

<h4>Bạn có chắc chắn muốn xóa chính sách này?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-3">Học kỳ</dt>
        <dd class="col-sm-9">@Model.HocKy</dd>

        <dt class="col-sm-3">Năm học</dt>
        <dd class="col-sm-9">@Model.NamHoc</dd>

        <dt class="col-sm-3">Ngành</dt>
        <dd class="col-sm-9">@Model.TenNganh</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">🗑️ Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">↩️ Quay lại</a>
</form>
