@model WebServer_DoAn.ViewModel.MonHocViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Sửa Môn học";
}

<h2>🎓 Chỉnh sửa Môn học</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MaMonHoc" />

    <div class="form-group">
        <label>Mã Môn Học</label>
        <input asp-for="MaMonHoc" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Tên Môn Học</label>
        <input asp-for="TenMonHoc" class="form-control" />
        <span asp-validation-for="TenMonHoc" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Loại Môn</label>
        <input asp-for="LoaiMon" class="form-control" />
        <span asp-validation-for="LoaiMon" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Số Tiết</label>
        <input asp-for="SoTiet" class="form-control" />
        <span asp-validation-for="SoTiet" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Số Tín Chỉ</label>
        <input asp-for="SoTinChi" class="form-control" />
        <span asp-validation-for="SoTinChi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Môn Tiên Quyết</label>
        <input asp-for="MaMonTienQuyet" class="form-control" />
        <span asp-validation-for="MaMonTienQuyet" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Ngành</label>
        <select asp-for="MaNganh" asp-items="ViewBag.Nganhs" class="form-control">
            <option value="">-- Chọn Ngành --</option>
        </select>
        <span asp-validation-for="MaNganh" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">💾 Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">↩️ Quay lại</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
