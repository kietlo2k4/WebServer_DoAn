@model WebServer_DoAn.Models.LopHocPhan

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Mở Lớp Học Phần";
}

<h2>🎓 Mở Lớp Học Phần</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-danger">@TempData["Message"]</div>
}

<form asp-action="MoLop" method="post" class="row g-3">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="col-md-6">
        <label>Môn học</label>
        <select asp-for="MaMonHoc" class="form-select" asp-items="ViewBag.MonHocs" required>
            <option value="">-- Chọn Môn học --</option>
        </select>
    </div>

    <div class="col-md-2">
        <label>Học kỳ</label>
        <input asp-for="HocKy" class="form-control" placeholder="1" />
    </div>

    <div class="col-md-2">
        <label>Năm học</label>
        <input asp-for="NamHoc" class="form-control" placeholder="@DateTime.Now.Year" />
    </div>

    <div class="col-md-2">
        <label>Nhóm</label>
        <input asp-for="Nhom" class="form-control" value="1" />
    </div>

    <div class="col-md-3">
        <label>Phòng học</label>
        <input asp-for="PhongHoc" class="form-control" placeholder="A101" />
    </div>

    <div class="col-md-2">
        <label>Thứ</label>
        <select asp-for="Thu" class="form-select">
            <option value="">-- Chọn Thứ --</option>
            <option value="2">Thứ 2</option>
            <option value="3">Thứ 3</option>
            <option value="4">Thứ 4</option>
            <option value="5">Thứ 5</option>
            <option value="6">Thứ 6</option>
            <option value="7">Thứ 7</option>
        </select>
    </div>

    <div class="col-md-2">
        <label>Tiết bắt đầu</label>
        <input asp-for="TietBatDau" class="form-control" placeholder="1" />
    </div>

    <div class="col-md-2">
        <label>Tiết kết thúc</label>
        <input asp-for="TietKetThuc" class="form-control" placeholder="3" />
    </div>

    <div class="col-md-3">
        <label>Sĩ số tối đa</label>
        <input asp-for="SoLuongToiDa" class="form-control" placeholder="50" />
    </div>

    <div class="col-12 mt-3">
        <button type="submit" class="btn btn-primary">💾 Mở lớp</button>
        <a asp-action="Index" class="btn btn-secondary">↩️ Quay lại</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
