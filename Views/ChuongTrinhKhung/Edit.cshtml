@model WebServer_DoAn.ViewModel.ChuongTrinhKhungViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Chỉnh sửa Chương Trình Khung";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post" class="card p-4 shadow-sm">
    <input type="hidden" asp-for="MaCTK" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label class="form-label">Ngành</label>
        <select asp-for="MaNganh" class="form-select" asp-items="Model.NganhList"></select>
    </div>

    <div class="mb-3">
        <label class="form-label">Môn học</label>
        <select asp-for="MaMonHoc" class="form-select" asp-items="Model.MonHocList"></select>
    </div>

    <div class="mb-3">
        <label class="form-label">Học kỳ</label>
        <input asp-for="HocKy" class="form-control" />
    </div>

    <div class="mb-3 form-check">
        <input asp-for="BatBuoc" class="form-check-input" />
        <label asp-for="BatBuoc" class="form-check-label">Bắt buộc</label>
    </div>

    <button type="submit" class="btn btn-success">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
